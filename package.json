{
  "name": "react-date-context",
  "author": "Tyler Jones <tyler@squirly.ca>",
  "description": "A set of React components for managing realtime UI updates that depend on the current time.",
  "version": "0.0.2",
  "repository": "github:squirly/react-date-context",
  "license": "MIT",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "peerDependencies": {
    "react": "~16",
    "prop-types": "~15"
  },
  "scripts": {
    "prebuild": "rm -rf ./lib",
    "build": "tsc && ./scripts/prepare-lib.js",
    "lint": "tslint --project tsconfig.json && kvikk-fix --list-different",
    "lint:fix": "tslint --project tsconfig.json --fix && kvikk-fix",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "prepublishOnly": "npm run build",
    "publish": "npm run prepublishOnly && npm publish lib"
  },
  "devDependencies": {
    "@types/jest": "22.2.2",
    "@types/prop-types": "15.5.2",
    "@types/react": "16.1.0",
    "@types/react-test-renderer": "16.0.1",
    "jest": "22.4.3",
    "jest-junit": "3.6.0",
    "kvikk-fix": "0.0.4",
    "prettier": "1.11.1",
    "prop-types": "15.6.1",
    "react": "16.2.0",
    "react-test-renderer": "16.2.0",
    "ts-jest": "22.4.2",
    "tslint": "5.9.1",
    "tslint-config-prettier": "1.10.0",
    "typescript": "2.8.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "<rootDir>/src/**/*.spec.ts?(x)"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts?(x)"
    ]
  }
}
