{
  "name": "react-date-context",
  "author": "Tyler Jones <tyler@squirly.ca>",
  "description": "A set of React components for managing realtime UI updates that depend on the current time.",
  "version": "0.1.1",
  "repository": "github:squirly/react-date-context",
  "license": "MIT",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "peerDependencies": {
    "react": "~16.8"
  },
  "scripts": {
    "prebuild": "rm -rf ./lib",
    "build": "tsc && ./scripts/prepare-lib.js",
    "lint": "tslint --project tsconfig.json",
    "lint:fix": "tslint --project tsconfig.json --fix",
    "test": "jest --coverage",
    "prepublishOnly": "npm run build",
    "publish": "npm run prepublishOnly && npm publish lib",
    "docs:generate": "typedoc --mode file --exclude *.spec.tsx --excludeNotExported"
  },
  "devDependencies": {
    "@types/jest": "24.0.21",
    "@types/react": "16.9.11",
    "@types/react-test-renderer": "16.9.1",
    "jest": "24.9.0",
    "jest-junit": "9.0.0",
    "prettier": "1.18.2",
    "react": "16.11.0",
    "react-test-renderer": "16.11.0",
    "ts-jest": "24.1.0",
    "tslint": "5.20.0",
    "tslint-config-prettier": "1.18.0",
    "tslint-plugin-prettier": "2.0.1",
    "typedoc": "0.15.0",
    "typescript": "3.7.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testMatch": [
      "<rootDir>/src/**/*.spec.ts?(x)"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts?(x)"
    ],
    "coverageThreshold": {
      "global": {
        "branches": -1,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  }
}
