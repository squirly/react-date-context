{
  "name": "react-date-context",
  "author": "Tyler Jones <tyler@squirly.ca>",
  "description": "A set of React components for managing realtime UI updates that depend on the current time.",
  "version": "0.0.2",
  "repository": "github:squirly/react-date-context",
  "license": "MIT",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "peerDependencies": {
    "react": "~16",
    "prop-types": "~15"
  },
  "scripts": {
    "prebuild": "rm -rf ./lib",
    "build": "tsc && ./scripts/prepare-lib.js",
    "lint": "tslint --project tsconfig.json",
    "lint:fix": "tslint --project tsconfig.json --fix",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "prepublishOnly": "npm run build",
    "publish": "npm run prepublishOnly && npm publish lib"
  },
  "devDependencies": {
    "@types/jest": "22.2.3",
    "@types/react": "16.3.14",
    "@types/react-test-renderer": "16.0.1",
    "jest": "23.0.0",
    "jest-junit": "4.0.0",
    "prettier": "1.12.1",
    "react": "^16.3.2",
    "react-test-renderer": "16.4.0",
    "ts-jest": "22.4.6",
    "tslint": "5.10.0",
    "tslint-config-prettier": "1.13.0",
    "tslint-plugin-prettier": "1.3.0",
    "typescript": "2.8.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "<rootDir>/src/**/*.spec.ts?(x)"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts?(x)"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  }
}
