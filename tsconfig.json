{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es2017", "dom"],
    "declaration": true,
    "module": "commonjs",
    "jsx": "react",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "baseUrl": "./src/",
    "outDir": "./lib/"
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./src/**/*.spec.*"
  ],
  "awesomeTypescriptLoaderOptions": {
    "useCache": true,
    "useBabel": true
  }
}
